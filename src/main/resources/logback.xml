<configuration>
    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{YYYY-MM-dd HH:mm:ss.SSS} [%thread] [%-5level] [%logger{36}] [zone: %X{hz.zone}] - %msg%n</pattern>
        </encoder>
    </appender>

    <logger name="com.hazelcast" level="INFO"/>

    <root level="WARN">
        <appender-ref ref="STDOUT" />
    </root>
</configuration>